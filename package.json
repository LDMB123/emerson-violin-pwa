{
    "name": "panda-violin-pwa",
    "version": "2.0.0",
    "description": "Local-first violin teaching PWA for children with a Red Panda coach and iPadOS 26.2 optimization",
    "type": "module",
    "scripts": {
        "predev": "node scripts/build-songs-html.js && node scripts/build-sw-assets.js",
        "dev": "vite",
        "prebuild": "node scripts/build-songs-html.js && node scripts/build-sw-assets.js",
        "build": "vite build",
        "postbuild": "node scripts/build-sw-assets.js --dist",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src --ext .js"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.0",
        "@vitest/coverage-v8": "^2.1.9",
        "happy-dom": "^20.3.9",
        "vite": "^6.0.0",
        "vitest": "^2.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
