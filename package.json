{
  "name": "emerson-violin-pwa",
  "version": "2.0.0",
  "description": "Emerson Violin Studio command center PWA (offline-first practice cockpit)",
  "type": "module",
  "scripts": {
    "prune:legacy": "node scripts/maintenance/prune-legacy.js",
    "predev": "node scripts/maintenance/prune-legacy.js && node scripts/build/copy-sqlite-wasm.js",
    "dev": "trunk serve --port 5173",
    "prebuild": "node scripts/maintenance/prune-legacy.js && node scripts/build/copy-sqlite-wasm.js",
    "build": "trunk build --release",
    "postbuild": "node scripts/build/build-sw-assets.js --dist",
    "ios:bundle": "node scripts/build/copy-pwa-to-ios.js",
    "preview": "trunk serve --release --port 5173",
    "prelint": "node scripts/maintenance/prune-legacy.js",
    "lint": "eslint src --no-error-on-unmatched-pattern",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@vitest/coverage-v8": "^4.0.18",
    "happy-dom": "^20.3.9",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@sqlite.org/sqlite-wasm": "^3.51.2-build6"
  }
}
