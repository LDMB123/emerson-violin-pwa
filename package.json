{
  "name": "panda-violin-pwa",
  "version": "2.0.0",
  "description": "Local-first violin teaching PWA for children with a Red Panda coach and iPadOS 26.2 optimization",
  "type": "module",
  "scripts": {
    "predev": "node scripts/extract-views.js && node scripts/build-sw-assets.js",
    "dev": "vite",
    "preoptimize": "node scripts/optimize-images.js && node scripts/optimize-audio.js && node scripts/optimize-fonts.js",
    "prebuild": "npm run preoptimize && node scripts/extract-views.js && node scripts/build-sw-assets.js",
    "build": "vite build",
    "postbuild": "node scripts/build-sw-assets.js --dist",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "qa:effectiveness": "npm run test:coverage && node scripts/assert-critical-coverage.mjs",
    "lint": "eslint src --ext .js",
    "lint:all": "eslint src scripts tests --ext .js,.mjs --ignore-pattern 'src/wasm/**'",
    "audit:deadcode": "npx knip@5.83.1 --include files,dependencies,exports,duplicates --no-progress",
    "audit:deps": "node scripts/audit-dependency-duplicates.mjs",
    "audit:modules": "node scripts/audit-feature-modules.mjs",
    "audit:learning": "node scripts/audit-learning-completeness.mjs",
    "audit:full": "npm run lint:all && npm run audit:deadcode && npm run audit:deps && npm run qa:effectiveness && npm run audit:modules && npm run audit:learning && npm run build",
    "handoff:verify": "npm run audit:full && npm run test:e2e",
    "handoff:status": "node scripts/handoff-status.mjs",
    "qa:screenshots": "node scripts/qa-screenshots.mjs",
    "stash:audit": "node scripts/stash-audit.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cheerio": "^1.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "happy-dom": "^20.3.9",
    "sharp": "^0.34.5",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
